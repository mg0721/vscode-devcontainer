{
    "name": "Ubuntu",
    "dockerComposeFile": ["./docker-compose.yml"],
    "service": "my.ubuntu",
    // "workspaceFolder": ".",
    "settings": {
        "terminal.integrated.profiles.linux": {
            "zsh": {
                "path": "/usr/bin/zsh",
                "icon": "star",
                // "env": {
                // 	"TESTING_VAR": "abc"
                // }
            },
            "bash": {
                "path": "/bin/bash",
                "icon": "star-full",
                // "env": {
                // 	"TESTING_VAR": "abc"
                // }
            }

        },
        "terminal.integrated.defaultProfile.linux": "bash",
    },
    "extensions": [
        // "felixfbecker.php-debug",
        // "felixfbecker.php-intellisense",
    ],
}


